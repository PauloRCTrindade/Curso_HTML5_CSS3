{% extends "layout.njk"%}

{% block head %}
<title>{{item.title}}</title>
{% endblock %}


{% block content %}
    <div class="titulo" class='video'>
        <h1>{{item.title}}</h1>
    </div>

    <section class="video">    
        <div class="card" id="{{item.id}}">
            <div class="containerVideo">
                <iframe src="https:www.youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
            </div>
            <div class="conteudo">
                <p>{{item.title}}</p>
            </div>
            <div class="info">
                <p class="nAulas">{{item.numeroAulas}}</p>
                <p class="price">{{item.price}}</p>
            </div>
        </div>
        
    </section>
    </main>
    <footer>
        <div class="nome">
            <p>Paulo Trindade</p>
        </div>
        <div class="menu">
            <a href="https://github.com/PauloRCTrindade" target="_blank">GitHub</a>
            <a href="">Linkedin</a>
            <a href="">Instagran</a>
        </div>
    </footer>
{% endblock%}